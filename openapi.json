{
  "openapi": "3.0.0",
  "info": {
    "title": "API Gateway - Food Delivery Microservices",
    "version": "1.0.0",
    "description": "Dokumentasi OpenAPI terpusat untuk semua layanan di belakang API Gateway."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "API Gateway Lokal"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Token JWT yang diperoleh dari endpoint /auth/login."
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "username": { "type": "string" },
          "name": { "type": "string" },
          "role": { "type": "string" },
          "balance": { "type": "number", "format": "float" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "UserInput": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": { "type": "string" },
          "name": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "LoginInput": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "access_token": { "type": "string" },
          "refresh_token": { "type": "string" },
          "user": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "username": { "type": "string" },
              "role": { "type": "string" }
            }
          }
        }
      },
      "Restaurant": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "address": { "type": "string" },
          "is_active": { "type": "boolean" }
        }
      },
      "MenuItem": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "restaurant_id": { "type": "integer" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "number", "format": "float" }
        }
      },
      "MenuItemInput": {
        "type": "object",
        "required": ["name", "price"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "number", "format": "float" }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "user_id": { "type": "integer" },
          "restaurant_id": { "type": "integer" },
          "total_price": { "type": "number", "format": "float" },
          "status": { "type": "string", "enum": ["PENDING", "PAID", "FAILED", "CANCELLED", "REFUNDED"] },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "integer" },
                "menu_item_id": { "type": "integer" },
                "quantity": { "type": "integer" },
                "price_at_time": { "type": "number", "format": "float" }
              }
            }
          }
        }
      },
      "OrderItemInput": {
        "type": "object",
        "required": ["menu_item_id", "quantity"],
        "properties": {
          "menu_item_id": { "type": "integer" },
          "quantity": { "type": "integer" }
        }
      },
      "OrderInput": {
        "type": "object",
        "required": ["user_id", "restaurant_id", "items"],
        "properties": {
          "user_id": { "type": "integer" },
          "restaurant_id": { "type": "integer" },
          "items": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/OrderItemInput" }
          }
        }
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "user_id": { "type": "integer" },
          "order_id": { "type": "integer" },
          "amount": { "type": "number", "format": "float" },
          "status": { "type": "string", "enum": ["PENDING", "SUCCESS", "FAILED", "REFUNDED"] },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "PaymentInput": {
        "type": "object",
        "required": ["user_id", "order_id", "amount"],
        "properties": {
          "user_id": { "type": "integer" },
          "order_id": { "type": "integer" },
          "amount": { "type": "number", "format": "float" }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string" }
        }
      }
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login Pengguna",
        "description": "Mengautentikasi pengguna dan mengembalikan access token (JWT) dan refresh token.",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginInput" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login Berhasil",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LoginResponse" }
              }
            }
          },
          "401": {
            "description": "Kredensial tidak valid",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "summary": "Refresh Access Token",
        "description": "Mendapatkan access token baru menggunakan refresh token yang valid.",
        "tags": ["Authentication"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token berhasil di-refresh",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LoginResponse" }
              }
            }
          },
          "401": {
            "description": "Refresh token tidak valid atau kedaluwarsa",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/user/users/": {
      "get": {
        "summary": "Dapatkan Semua Pengguna",
        "tags": ["User Service"],
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Daftar pengguna",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Buat Pengguna Baru",
        "description": "Hanya Admin. Membuat pengguna baru.",
        "tags": ["User Service"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pengguna dibuat",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          },
          "403": { "description": "Akses ditolak (Bukan Admin)" }
        }
      }
    },
    "/api/user/users/{id}": {
      "get": {
        "summary": "Dapatkan Pengguna berdasarkan ID",
        "tags": ["User Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Detail pengguna",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          },
          "404": { "description": "Pengguna tidak ditemukan" }
        }
      },
      "put": {
        "summary": "Perbarui Pengguna",
        "description": "Hanya Admin. Memperbarui detail pengguna.",
        "tags": ["User Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserInput" }
            }
          }
        },
        "responses": {
          "200": { "description": "Pengguna diperbarui" }
        }
      },
      "delete": {
        "summary": "Hapus Pengguna",
        "description": "Hanya Admin. Menghapus pengguna.",
        "tags": ["User Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Pengguna dihapus" }
        }
      }
    },
    "/api/restaurant/restaurants/": {
      "get": {
        "summary": "Dapatkan Semua Restoran",
        "tags": ["Restaurant Service"],
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Daftar restoran",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Restaurant" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Buat Restoran Baru",
        "description": "Hanya Admin.",
        "tags": ["Restaurant Service"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Restaurant" }
            }
          }
        },
        "responses": {
          "201": { "description": "Restoran dibuat" }
        }
      }
    },
    "/api/restaurant/restaurants/{id}": {
      "get": {
        "summary": "Dapatkan Restoran berdasarkan ID",
        "tags": ["Restaurant Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Detail restoran" }
        }
      },
      "put": {
        "summary": "Perbarui Restoran",
        "description": "Hanya Admin.",
        "tags": ["Restaurant Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Restaurant" }
            }
          }
        },
        "responses": {
          "200": { "description": "Restoran diperbarui" }
        }
      },
      "delete": {
        "summary": "Hapus Restoran",
        "description": "Hanya Admin.",
        "tags": ["Restaurant Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Restoran dihapus" }
        }
      }
    },
    "/api/restaurant/restaurants/{id}/menu": {
      "get": {
        "summary": "Dapatkan Menu untuk Restoran",
        "tags": ["Restaurant Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Daftar menu item",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/MenuItem" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Buat Item Menu Baru",
        "description": "Hanya Admin.",
        "tags": ["Restaurant Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MenuItemInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Item menu dibuat" }
        }
      }
    },
    "/api/restaurant/restaurants/{restaurant_id}/menu/{menu_id}": {
      "get": {
        "summary": "Dapatkan Item Menu berdasarkan ID",
        "tags": ["Restaurant Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "restaurant_id", "in": "path", "required": true, "schema": { "type": "integer" } },
          { "name": "menu_id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Detail item menu" }
        }
      },
      "put": {
        "summary": "Perbarui Item Menu",
        "description": "Hanya Admin.",
        "tags": ["Restaurant Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "restaurant_id", "in": "path", "required": true, "schema": { "type": "integer" } },
          { "name": "menu_id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MenuItemInput" }
            }
          }
        },
        "responses": {
          "200": { "description": "Item menu diperbarui" }
        }
      },
      "delete": {
        "summary": "Hapus Item Menu",
        "description": "Hanya Admin.",
        "tags": ["Restaurant Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "restaurant_id", "in": "path", "required": true, "schema": { "type": "integer" } },
          { "name": "menu_id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Item menu dihapus" }
        }
      }
    },
    "/api/order/orders/": {
      "get": {
        "summary": "Dapatkan Semua Order",
        "tags": ["Order Service"],
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Daftar order",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Order" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Buat Order Baru",
        "description": "Hanya Admin (berdasarkan middleware adminOnlyForMutations). Endpoint ini akan memicu alur pembayaran penuh.",
        "tags": ["Order Service"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/OrderInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order berhasil dibuat dan dibayar",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Order" }
              }
            }
          },
          "400": { "description": "Pembayaran gagal (misal: saldo tidak cukup)" }
        }
      }
    },
    "/api/order/orders/{id}": {
      "get": {
        "summary": "Dapatkan Order berdasarkan ID",
        "tags": ["Order Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Detail order",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Order" }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Perbarui Status Order (Demo)",
        "description": "Hanya Admin. Mengizinkan perubahan status order secara manual.",
        "tags": ["Order Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": { "type": "string", "enum": ["PENDING", "PAID", "FAILED", "CANCELLED", "REFUNDED"] }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Status order diperbarui" }
        }
      },
      "delete": {
        "summary": "Hapus Order (Demo)",
        "description": "Hanya Admin. Hanya order yang belum dibayar yang bisa dihapus.",
        "tags": ["Order Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Order dihapus" }
        }
      }
    },
    "/api/payment/payments/": {
      "get": {
        "summary": "Dapatkan Semua Transaksi",
        "tags": ["Payment Service"],
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Daftar transaksi",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Transaction" }
                }
              }
            }
          }
        }
      }
    },
    "/api/payment/payments/{id}": {
      "get": {
        "summary": "Dapatkan Transaksi berdasarkan ID",
        "tags": ["Payment Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Detail transaksi",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Transaction" }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Perbarui Status Transaksi (Demo)",
        "description": "Hanya Admin. HANYA UNTUK DEMO. Transaksi keuangan seharusnya immutable.",
        "tags": ["Payment Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": { "type": "string", "enum": ["PENDING", "SUCCESS", "FAILED", "REFUNDED"] }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Status transaksi diperbarui" }
        }
      },
      "delete": {
        "summary": "Hapus Transaksi (Demo)",
        "description": "Hanya Admin. HANYA UNTUK DEMO. Transaksi keuangan seharusnya tidak pernah dihapus.",
        "tags": ["Payment Service"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Transaksi dihapus" }
        }
      }
    },
    "/api/payment/internal/process": {
      "post": {
        "summary": "Proses Pembayaran (Internal)",
        "description": "Hanya Admin. Endpoint yang dipanggil oleh Order Service untuk memproses pembayaran. Dibatasi untuk admin oleh API Gateway.",
        "tags": ["Payment Service"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/PaymentInput" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pembayaran sukses",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Transaction" }
              }
            }
          },
          "400": { "description": "Pembayaran gagal (misal: saldo tidak cukup)" }
        }
      }
    }
  }
}